{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
